<div class="main-visual">
    <div class="bgimg src1"></div>
    <div class="bgimg src2"></div>
    <div class="bgimg src3"></div>
</div>
<div class="main">
    <section class="pictures">
        <h2 class="pictures-heading">
            <span>
                PICTURES
            </span>
        </h2>
        <% @pictures.each do |picture| %>
        <div class="pictures-list">
            <article class="picture-article">
                <div class="picture-article-item">
                    <%= link_to picture_path(picture.id) do %>
                        <%= attachment_image_tag picture, :image, class: "list-image" %>
                    <% end %>
                    <div class="list-text">
                        <h6 class="created-day"><%= picture.created_at.strftime("%Y.%m.%d") %></h6>
                        <h4 class="list-text-body"><%= picture.picture %></h4>
                    </div>
                </div>
            </article>
        </div>
        <% end %>
    </section>
</div>
